{{#if isShowingForm}}


<form {{action 'submitPlayers' on="submit"}}>

  <div class="form-group">
    {{input value=username0 class="form-control" placeholder="NAME"}}
  </div>

  <div class="form-group">
    {{input value=username1 class="form-control" placeholder="NAME"}}
  </div>

  <div class="form-group">
    {{input value=username2 class="form-control" placeholder="NAME"}}
  </div>

  <div class="form-group">
    {{input value=username3 class="form-control" placeholder="NAME"}}
  </div>

  <button {{action 'submitPlayers'}} class="btn change-button" >Save</button>
</form>

{{else}}
  <button {{action "showForm"}}class="btn change-button position-player-buttons-submit" type="submit">Add Players</button>
{{/if}}
